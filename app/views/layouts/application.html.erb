<!DOCTYPE html>
<html>
<head>
  <title>Bigboard</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
      <% if @board.nil? %>
        <a class="navbar-brand" href="/">Big Board</a>
      <% else %>
        <%= link_to @board.name, @board, :class => "navbar-brand" %>
      <% end %>
      </div>


      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">

          <% if user_signed_in? %>

          <% if !@board.nil? %>
          <li class="<%= 'active' if params[:controller] == 'initiatives' %>"><a href="<%= board_initiatives_path(@board) %>">Initiatives</a></li>
          <li class="<%= 'active' if params[:controller] == 'teams' %>"><a href="<%= board_teams_path(@board) %>">Teams</a></li>
          <li class="<%= 'active' if params[:controller] == 'roles' %>"><a href="<%= board_roles_path(@board) %>">Roles</a></li>
          <% end %>

          <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li class="<%= 'active' if params[:controller] == 'people' %>"><a href="/people">People</a></li>
          <% if @boards.empty? %>
          <li class="<%= 'active' if params[:controller] == 'boards' %>"><a href="/">Boards</a></li>
          <% else %>
          <li class="dropdown">
            <a href="/" class="dropdown-toggle" data-toggle="dropdown">Boards <b class="caret"></b></a>
            <ul class="dropdown-menu">
              <% @boards.each do |b| %>
                <li><%= link_to b.name, b %></li>
              <% end %>
            </ul>
          </li>
          <% end %>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name %> <b class="caret"></b></a>
            <ul class="dropdown-menu">
            <li><%= link_to('Logout', destroy_user_session_path) %></li>
            </ul>
          </li>
          <% else %>
          <li><a href="<%= user_omniauth_authorize_path(:yammer) %>">Sign in with Yammer</a></li>
          <% end %>
        </ul>

      </div><!--/.nav-collapse -->
    </div>
  </div>

  <div class="container<%= "-fluid" if params[:controller] == 'boards' %>">
    <div class="row alerts-row">
      <% if !notice.nil? %>
      <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= notice %>
      </div>
      <% end %>
      
      <% if !alert.nil? %>
      <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <%= alert %>
      </div>
      <% end %>
    </div>
<%= yield %>
  </div>
  <footer>
    <div class="container">

    </div>
  </footer>
<script type="text/javascript">
  var ACCESS_TOKEN = "<%= current_user.access_token if user_signed_in? && current_user['access_token'] %>";
</script>
<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
