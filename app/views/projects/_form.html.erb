<div class="row">
  <div class="col-md-6">
    <%= bootstrap_form_for(@project, layout: :horizontal, label_col: "col-md-2", control_col: "col-md-6") do |f| %>
      <% if @project.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

          <ul>
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.select :status, ['', 'Product Planning', 'Engineering'] %>
      </div>
      <div class="field">
        <%= f.text_field :start_date, :data => { :behaviour => "datepicker" } %>
      </div>
      <div class="field">
        <%= f.text_field :end_date, :data => { :behaviour => "datepicker" } %>
      </div>
      <div class="field">
        <%= f.select :location, ['SF', 'UK', 'YN'] %>
      </div>
      <div class="field">
        <%= f.select :project_type, ['', 'Product', 'Internal Projects'] %>
      </div>
      <div class="field">
        <%= f.collection_select :initiative_id, Initiative.all, :id, :name %>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-4">
          <%= f.submit %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-6">
  <h3>Project Members</h3>
  <% unless @project.project_members.nil? %>
  <ul>
  <% @project.project_members.order(role_id: :asc).each do |pm| %>
    <li><%= person_tag pm.person %> (<%= pm.role.name %>)</li>
  <% end %>
  </ul>
  <% end %>
  <h3>Changelog</h3>
  <ul>
  <% @project.versions.each do |v| %>
    <li>
      <% if v.changeset.empty? %>
      <%= v.event %> on <%= v.created_at.strftime("%m/%d/%y") %>
      <% else %>
      <%= Project.human_attribute_name(v.changeset.first[0]) %> changed: <%= v.changeset.first[1].join(' â†’ ') %>
      <% end %>
    </li>
  <% end %>
  <% @project.project_members.each do |pm| %>
    <% pm.versions.each do |v| %>
      <li>
      <% if v.event == 'create' %>
        Added <%= person_tag pm.person %>
      <% else %>
      ?? <%= v.event %>
      <% end %>
      </li>
    <% end %>
  <% end %>
  </ul>
  </div>
</div>